<table id="reports-datatable" style="margin: 3rem auto;" data-source="<%= user_list_path(format: :json) %>">
  <thead>
  <tr>
    <th>ID</th>
    <th>Reason</th>
    <th>Status</th>
    <th>Conversation</th>
    <th>Reporter</th>
    <th>Offender</th>
    <th>Actions</th>
  </tr>
  </thead>

  <tbody>
    <% @data.each do |r|  %>
      <tr>
        <td><%= r.id %></td>
        <td><%= r.reason %></td>
        <td><%= r.status %></td>
        <td><%= r.conversation %></td>
        <td>
          <a href="/users/<%= r.reporter.id %>">
             <%= r.reporter.first_name %>
          </a>
        </td>
        <td>
          <a href="/users/<%= r.offender.id %>">
            <%= r.offender.first_name %>
          </a>
        </td>
        <td>
          <%= form_tag resolve_report_path(id: r.id), method: :post do %>
            <%=  submit_tag 'Resolve', class: 'button is-primary is-small'%>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>